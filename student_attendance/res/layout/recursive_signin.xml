<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation = "vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/UUJBlue" >


    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_margin="16dp">


        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/UULogo"
                    android:background="@drawable/artwork"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/uuj_logo_att"/>


            <Button android:id="@id/lec_scan_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/scanid"
                    android:layout_below="@id/lec_scan_mod"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="4dp"
                    />

            <Button android:id="@id/lec_scan_mod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/scanmod"
                    android:layout_below="@+id/UULogo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:layout_margin="4dp"
                    />

            <Button android:id="@id/add_student_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/checkin"
                    android:layout_below="@+id/lec_scan_id"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:layout_margin="4dp"
                    />

            <TextView
                    android:id="@+id/scan_format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="true"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/add_student_auto" />

            <TextView
                    android:id="@+id/scan_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="true"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/scan_format" />

            </RelativeLayout>
    </FrameLayout>
</FrameLayout>