<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/UUJBlue">

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp">


        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:id="@id/qr_id"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:layout_marginTop="5dp"/>

            <WebView
            android:id="@+id/webView"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:layout_width="450dp"
            android:layout_height="400dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/lec_lecqr"
            android:background="@drawable/lecture"
            android:layout_centerVertical="true" android:layout_toLeftOf="@+id/webView"
            android:layout_marginRight="80dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tutorial"
            android:id="@id/lec_tutqr"
            android:layout_marginLeft="80dp" android:layout_alignTop="@id/lec_lecqr"
            android:layout_toRightOf="@id/module_number"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:id="@id/module_number"
            android:layout_above="@+id/webView"
            android:layout_alignRight="@+id/webView"/>


        </RelativeLayout>
    </FrameLayout>

</FrameLayout>