<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation = "vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/UUJBlue" >

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_margin="100dp">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/UULogo"
                    android:background="@drawable/uulogo"
                    android:contentDescription="@string/uuj_logo_att"
                    android:layout_marginTop="110dp"
                    android:layout_centerHorizontal="true"/>

            <Button android:id="@+id/scan_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/checkin"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="50dp"/>

        </RelativeLayout>
    </FrameLayout>

</FrameLayout>


